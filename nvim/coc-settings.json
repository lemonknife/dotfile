{
    // coc configure
    "coc.preferences.extensionUpdateCheck": "daily",
    "suggest.noselect": true,
    "suggest.enablePreselect": false,
    "suggest.floatConfig": {
        "border": true,
        "rounded": true
    },
    "diagnostic.floatConfig": {
        "border": true,
        "rounded": true
    },
    "signature.floatConfig": {
        "border": true,
        "rounded": true
    },
    "hover.floatConfig": {
        "border": true,
        "rounded": true
    },

    // pair configure
    "pairs.enableCharacters": [
        "(",
        "[",
        "{",
        "<",
        "'",
        "\""
    ],

    // highlight configure
    "colors.enable": true,
    "highlight.colorNames.enable": false,

    // json configure
    "json.enable": true,

    // lua configure
    "sumneko-lua.enable": true,
    "sumneko-lua.locale": "zh-cn",
    "Lua.workspace.checkThirdParty": false,

    // python configure
    "pyright.enable": true,

    // rust configure
    "rust-analyzer.enable": true,
    "workspace.ignoredFolders": [
        "$HOME",
        "$HOME/.cargo/**",
        "$HOME/.rustup/**"
    ]
}
